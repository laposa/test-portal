{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": true,
  "tabWidth": 4,
  "singleQuote": true,
  "printWidth": 100,
  "trailingComma": "all",
  "plugins": [
    "@prettier/plugin-php",
    "@shufo/prettier-plugin-blade"
  ],
  "overrides": [
    {
      "files": [
        "*.blade.php"
      ],
      "options": {
        "parser": "blade",
        "tabWidth": 4
      }
    }
  ]
}