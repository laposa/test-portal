---
import Footer from './Footer.astro';
import Header from './Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Laposa Testing Portal" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<main>
			<div class="container">
				<slot />
			</div>
		</main>
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		--primary: cadetblue;
		--primary-opaque: rgba(95, 158, 160, 0.5);
	}
	* {
		box-sizing: border-box;
		font-family:'Trebuchet MS', Arial, sans-serif
	}

	html {
		height: 100%;
	}

	body {
		margin: 0;
		max-width: 100vw;
		width: 100%;
		overflow-x: hidden;
		height: 100%;
		display: flex;
		flex-direction: column;
	}

	img {
		object-fit: cover;
		width: 100%;
	}

	a {
		font-size: 1.1rem;
		color: var(--primary);
	}

	h1 {
		font-size: 2rem;

		& a {
			font-size: 2rem;
		}
	}

	h1,
	h2,
	h3 {
		color: var(--primary);
	}

	body {
		font-size: 16px;
		line-height: 1.6;
		max-width: 100vw;
		width: 100%;
	}

	button {
		padding: 0.25rem 1rem;
		outline: none;
		border: none;
		color: white;
		background-color: black;
		transition: 0.25s ease;
		border: 1px solid black;
		cursor: pointer;
	}

	button:hover {
		color: black;
		background-color: white;
	}

	input {
		padding: 0.25rem;
		border: 1px solid hsl(0, 0%, 50%);
	}

	main {
		width: 100%;
	}

	h1,
	h2,
	h3 {
		grid-column: span 2;
	}

	.button {
		display: inline-flex;
		justify-content: center;
		align-items: center;
		height: 50px;
		min-width: 150px;
		color: var(--primary);
		text-decoration: none;
		border: 2px solid var(--primary);
		border-radius: 50px;
		transition: 0.25s ease;

		&:hover {
			background-color: var(--primary);
			color: white;
		}
	}

	.container {
		margin: auto;
		padding: 2rem;
		width: 100%;
		max-width: 1200px;
		font-size: 16px;
		line-height: 1.6;
		display: grid;
		grid-template-columns: 1fr 1fr;
		grid-gap: 20px;
		justify-items: start;
		align-items: start;
	}

	@media all and (max-width: 768px) {
		.container {
			grid-template-columns: 1fr;

			h1,
			h2,
			h3 {
				grid-column: span 1;
			}
		}
	}
</style>
