---
const { title, width, border } = Astro.props;
---

<div class:list={['section', {"no-border": !border}, width]}>
	<h2>{title}</h2>
	<slot></slot>
	<hr>
</div>

<style>
	h2 {
		font-size: 2rem;
		margin: 0;
		text-transform: uppercase;
		left: 1rem;
	}

	.section {
		position: relative;
		background-color: white;
		align-self: start;
		width: 100%;
		margin-bottom: 2rem;

		&.full {
			grid-column: span 2;

			@media (max-width: 768px) {
				grid-column: span 1;
			}
		}

		hr {
			border: 0;
			border-top: 1px solid var(--primary-opaque);
			margin: 0;
			margin-top: 1rem;

			.no-border & {
				display: none;
			}
		}
	}
</style>